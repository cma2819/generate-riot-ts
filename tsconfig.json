{
  "compilerOptions": {
    "importHelpers": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "public",
    "types": ["node"],
    "declaration": true
  },
  "include": ["src/**/*.ts"]
}
